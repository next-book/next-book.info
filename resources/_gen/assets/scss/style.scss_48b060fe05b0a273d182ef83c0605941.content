*,*:before,*:after{box-sizing:inherit}html,body{margin:0;padding:0;-webkit-font-smoothing:antialiased;box-sizing:border-box}h1,h2{font-family:ivypresto-text,serif;font-weight:400}p,li{font-family:halyard-display,sans-serif}.hide{display:none}@keyframes gradient{0%{background-position:0,0 0}50%{background-position:100%,0 0}100%{background-position:0,0 0}}footer,main{margin:0 1rem}nav.global{padding:.5rem 1rem}nav.global ul{display:flex;margin:0;padding:0}nav.global ul li{display:block;list-style-type:none;margin-left:1rem}nav.global ul li:first-child{margin-left:0;flex-grow:10}nav.global a{color:#000;text-decoration:none;font-size:1.5rem;text-transform:lowercase}main.home header{background-blend-mode:multiply;background-image:linear-gradient(-45deg,#f26531,#f26531),url(/images/marble.jpg);background-size:400% 400%,100%;animation:gradient 20s ease infinite;height:80vh;padding:10vh;box-sizing:border-box}main.home header .wrapper{box-sizing:border-box;height:60vh;padding-top:10vh;background-image:url(/images/ellipse.svg);background-position:50%;background-size:contain;background-repeat:no-repeat}main.home header .wrapper h1{margin:0 0 2rem;font-family:halyard-display,sans-serif;color:#fff;text-align:center}main.home header .wrapper h1 .vf-logo{display:block;font-size:14vh;font-family:ivypresto-text,serif}main.home header .wrapper p{text-align:center;width:16rem;margin:1rem auto}.button{box-sizing:border-box;display:inline-block;text-align:center;min-width:16rem;background:#fff;padding:.5rem 1.5rem .7rem;border-radius:10rem;text-decoration:none;color:#f26531;border:.1rem solid #fff;font-weight:600}.button.outlined{color:#fff;background:#f26531}